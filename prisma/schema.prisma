model FirmBalance {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  amount Float? @default(0)
}

enum Role {
  KIEROWCA
  PODWYKONAWCA
  SPEDYTOR
  ZARZAD
  PROBNY
}

