  locationId      String?        @db.ObjectId

  driver   DriverBeta? @relation(fields: [driverId], references: [id], onDelete: Cascade)
  driverId String?     @db.ObjectId
  Firm     FirmBeta?   @relation(fields: [firmId], references: [id], onDelete: Cascade)
